# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
tab_width = 2
# IDEA specific.
ij_continuation_indent_size = 4

[*.py]
indent_size = 4
# IDEA specific.
tab_width = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false
